<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zl.screenshotandrecord.SurfaceViewActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/surfaceView" />

    <SurfaceView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        android:id="@+id/surfaceView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/kitkatbutton"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/kitKatScreenShot"
        android:id="@+id/kitkatbutton"
        app:layout_constraintRight_toLeftOf="@+id/lollipopbutton"
        android:layout_marginBottom="7dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/lollipopScreenShot"
        android:id="@+id/lollipopbutton"
        app:layout_constraintRight_toLeftOf="@+id/playBtn"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toRightOf="@+id/kitkatbutton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="@string/play"
        android:id="@+id/playBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/lollipopbutton"
        app:layout_constraintTop_toTopOf="@+id/lollipopbutton"
        android:layout_marginTop="0dp" />

</android.support.constraint.ConstraintLayout>
